@model CastBank.Models.Emprestimo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Emprestimo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Parcelas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Parcelas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa.CNPJ)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorParcelas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorParcelas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fa fa-pencil" aria-hidden="true" style=""></i>
    </a> |
    <a asp-action="Index" class="btn btn-warning">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a> |
    <a asp-controller="Emprestimos" asp-action="ParcelaPaga" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="fa fa-money" aria-hidden="true"></i>
    </a>
</div>
