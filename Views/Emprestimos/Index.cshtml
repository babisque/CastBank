@model IEnumerable<CastBank.Models.Emprestimo>

@{
    ViewData["Title"] = "Empréstimos";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus" aria-hidden="true"></i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parcelas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parcelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.CNPJ)
            </td>
            @{
                        string badge = String.Empty;
                        if(item.Status.ToString() == "Aberto")
                        {
                            badge = "warning";
                        } else if (item.Status.ToString() == "Pago")
                        {
                            badge = "success";
                        }
                    }
            <td>
                <span class="badge bg-@badge">@Html.DisplayFor(modelItem => item.Status)</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                    <i class="fa fa-pencil" aria-hidden="true" style=""></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                    <i class="fa fa-inbox" aria-hidden="true"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
